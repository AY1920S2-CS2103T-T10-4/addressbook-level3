<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane VBox.vgrow="ALWAYS" hgap="5" vgap="5" fx:id="lessonPane" xmlns="http://javafx.com/javafx/8.0.171"
          xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="80.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="100.0" />
    </columnConstraints>
    <Label fx:id="name" styleClass="activity_big_label" text="\$code" wrapText="true"
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Label fx:id="note" styleClass="activity_small_label" text="\$code" wrapText="true"
           GridPane.columnIndex="0" GridPane.rowIndex="1">
        <minWidth>
            <Region fx:constant="USE_PREF_SIZE"/>
        </minWidth>
    </Label>
    <Label fx:id="date" styleClass="activity_small_label" text="\$code" wrapText="true"
           GridPane.columnIndex="0" GridPane.rowIndex="2">
        <minWidth>
            <Region fx:constant="USE_PREF_SIZE"/>
        </minWidth>
    </Label>
    <Label fx:id="status" styleClass="activity_small_label" text="\$code" wrapText="true"
           GridPane.columnIndex="1" GridPane.rowIndex="1">
        <minWidth>
            <Region fx:constant="USE_PREF_SIZE"/>
        </minWidth>
    </Label>
    <Label fx:id="priority" styleClass="activity_small_label" text="\$code" wrapText="true"
           GridPane.columnIndex="1" GridPane.rowIndex="2">
        <minWidth>
            <Region fx:constant="USE_PREF_SIZE"/>
        </minWidth>
    </Label>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    </GridPane>
