<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="popUp" hgap="5" vgap="3" styleClass="hint_label" alignment="CENTER"
          xmlns="http://javafx.com/javafx/11"
          xmlns:fx="http://javafx.com/fxml/1">
    <rowConstraints>
        <RowConstraints minHeight="-Infinity" valignment="TOP" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="-Infinity" valignment="TOP" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="-Infinity" valignment="TOP" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Label fx:id="command" GridPane.columnIndex="0" GridPane.rowIndex="0" text="Description">
    </Label>
    <Label fx:id="parameters" GridPane.columnIndex="0" GridPane.rowIndex="1" text="Parameters">
    </Label>
    <Label fx:id="example" GridPane.columnIndex="0" GridPane.rowIndex="2" text="Example">
    </Label>
    <Label fx:id="commandMessage" GridPane.columnIndex="1" GridPane.rowIndex="0" text="\$code">
    </Label>
    <Label fx:id="parametersMessage" GridPane.columnIndex="1" GridPane.rowIndex="1" text="\$code">
    </Label>
    <Label fx:id="exampleMessage" GridPane.columnIndex="1" GridPane.rowIndex="2" text="\$code">
    </Label>
    <Button fx:id="copyExample" mnemonicParsing="false" onAction="#copyExample" text="Copy Example"
            GridPane.columnIndex="2" GridPane.rowIndex="1">
    </Button>
    <opaqueInsets>
        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
    </opaqueInsets>
    <padding>
        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
    </padding>
</GridPane>

