<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="noModules" maxWidth="Infinity" styleClass="no-modules" minHeight="200"
           maxHeight="Infinity" wrapText="true" alignment="BOTTOM_CENTER"
           text="No modules added... Use madd m/[MODULE_CODE] n/[MODULE_NAME] to start adding!"
           HBox.hgrow="ALWAYS">
    </Label>
    <ListView id="module" fx:id="moduleListView" orientation="HORIZONTAL" HBox.hgrow="ALWAYS"/>
</HBox>
